<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<StackPane fx:id="rootSimulation" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="backend.controllers.views.SimulationController">
    <Pane fx:id="playground" StackPane.alignment="TOP_LEFT" />
    <VBox fx:id="menuVBox" alignment="TOP_RIGHT">
        <Button onAction="#start" text="Start" textFill="blueviolet" />
        <HBox alignment="TOP_RIGHT">
            <Label>Gen:</Label>
            <Label fx:id="genNumber"></Label>
        </HBox>
    </VBox>
</StackPane>
